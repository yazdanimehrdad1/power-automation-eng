generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Site {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  name      String    @unique
  address   String
  assets    Asset[]
}


model Asset {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())
  type        String
  assetId     String
  name        String
  description String
  status      String
  location    String
  image       String
  video       String
  upstreamId  String
  downstreamId String
  upstreamName String
  downstreamName String
  belongsTo   Site?    @relation(fields: [belongsToId], references: [id])
  belongsToId String?
}
